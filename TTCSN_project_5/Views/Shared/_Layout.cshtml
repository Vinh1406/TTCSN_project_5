<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
    <link href="~/asset/css_one/fontawesome-free-6.4.2/css/all.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.min.js" integrity="sha512-L0Shl7nXXzIlBSUUPpxrokqq4ojqgZFQczTYlGjzONGTDAcLremjwaWv5A+EDLnxhQzY5xUZPWLOLqYRkY0Cbw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</head>
<style>
    html{
        height: 100%;
    }
    .body {
        padding-top: 0;
        margin: 0;
        width: 100%;

    }
    body {
        height: 100%;
    }

    .Home {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
    }

    .Menu {
        display: block;
        width: 298px;
        padding-top: 0;
        margin: 0;
        box-sizing: border-box;
        box-shadow: 0 0 10px 0 rgba(0,0,0,.25);
        position: fixed;
        top: 0;
        left: 0;
        right: 20%;
        bottom: 0;
        z-index: 100;
        background-color: white;
    }

    .Menu_img {
        width: auto;
        padding: 5px;
        justify-content: space-around;
        display: flex;
        background-color: whitesmoke;
        box-shadow: 0 2px 5px 0 rgba(0,0,0,.15);
    }

        .Menu_img .img_logo {
            width: 50%;
            padding: 20px;
            box-sizing: border-box;
        }

        .Menu_img .img_text {
            color: darkslateblue;
            text-align: center;
            padding-top: 40px;
            font-size: 20px;
            line-height: 50px;
        }

    .Menu_content {
        margin: 0;
        padding: 0;
        display: block;
    }

        .Menu_content ul {
            width: 100%;
            color: black;
            padding: 0;
            list-style-type: none;
            display: inline-block;
            margin-top: 0;
        }

            .Menu_content ul li {
                width: auto;
                box-sizing: border-box;
                display: flex;
                width: 100%;
                position: relative;
            }

                .Menu_content ul li:last-child {
                    border: none;
                }

                .Menu_content ul li a {
                    text-decoration: none;
                    color: darkslateblue;
                    font-weight: 700;
                    display: block;
                    position: relative;
                    padding: 15px 20px;
                    padding-left: 60px;
                    font-size: 16px;
                    width: 100%;
                }

                .Menu_content ul li:hover {
                    background-color: beige;
                }


                .Menu_content ul li i {
                    margin-right: 15px;
                    font-size: 16px;
                    color: darkslateblue;
                }

    .Menu__icon {
        width:35px;
        text-align: center;
        height:7px;
        position: absolute;
        top: 50%;
        transform: translateY(-150%);
        left: 20px;
    }
    .Home__head h2{
        color: white;
        margin: 0;
        font-size: 19px;
    }
    .content2 {
        width: calc(100% - 20px);
        margin: 10px;
        height: calc(100% - 20px);
        box-sizing: border-box;
        margin-top: 50px;
    }
    .content {
        width: calc(100% - 298px);
        margin-left: 298px;
    }
    .menuDN{
        background-color: Highlight;
        display: flex;
        justify-content:right;
        text-align:right;
        color: white;
        position: fixed;
        top: 0;
        width: 100%;
        z-index: 20;
    }
    .rightDN {
        position: relative;
        display: flex;
        padding: 10px 10px;
        font-size: 15px;
        margin-right: 10px;
        align-items: center;
    }
    .nameAd{
        display:flex;
    }
    .nameAd i{
        font-size: 20px;
    }
    .nameAd:hover{
        cursor:pointer;
    }
    .menuAdmin {
        background-color: white;
        position: absolute;
        right: 10px;
        top: 35px;
        overflow: hidden;
        transition: 0.3s;
        box-shadow: 0px 0px 10px rgba(0,0,0,.25);
        min-width: 153px;
    }
    .menuAdmin div{
        text-align:left;
    }
    .optionAdmin{
        font-size: 15px;
        color: black;
    }
    .optionAdmin a{
        text-decoration: none;
        color: gray;
        display: block;
        padding: 7px 12px;   
    }
        .optionAdmin a:hover{
           background-color: aliceblue;
        }
</style>
<body>
    <div class="Home">
        <div class="menuDN">
            <div class="rightDN">
                Xin chào |
                <div class ="nameAd" onclick="showMenu()">
                    <div style="font-size: 15px; margin: 0 10px; align-items: center; display:flex;">@Session["HoTen"]</div>
                    <i class="fa-solid fa-user" style="color: white;"></i>
                </div>
                <div class="menuAdmin" id="clickMenu" style=" height: 0px;">
                    <div class="qltk optionAdmin"><a href="/DangNhap/ThongTinAdmin">Thông tin tài khoản</a></div>
                    <div class="dangxuat optionAdmin"><a href="/DangNhap/DangXuat">Đăng xuất</a></div>
                </div>
            </div>

        </div>
        <div class="Menu">

            <div class="Menu_img">
                <img class="img_logo" src="~/asset/img/Logo_NTQ_Solution_JSC.png" />
            </div>
            @*<p class="Menu_text">Chức năng</p>*@
            <div class="Menu_content">
                <ul>
                    <li>
                        <div class="Menu__icon"><i class="fa-solid fa-house"></i></div>
                        @Html.ActionLink("Trang chủ", "Index", "Home")

                    </li>
                    <li>
                        <div class="Menu__icon"><i class="fa-solid fa-user"></i></div>
                        @Html.ActionLink("Nhân viên", "QLNhanVien", "Home")
                    </li>
                    <li>
                        <div class="Menu__icon"><i class="fa-solid fa-dollar-sign"></i></div>
                        @Html.ActionLink("Lương", "QLLuong", "Home")
                    </li>
                    <li>
                        <div class="Menu__icon"><i class="fa-solid fa-users-line"></i></div>
                        @Html.ActionLink("Phòng ban", "QLPhongBan", "Home")
                    </li>
                    <li>
                        <div class="Menu__icon"><i class="fa-regular fa-calendar"></i></div>
                        @Html.ActionLink("Ngày nghỉ", "QLNgayNghi", "Home")
                    </li>

                </ul>
            </div>
        </div>
        <div class="content">
            <div class="content2">
                @RenderBody()
            </div>

        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
<script>

    function showMenu() {
        var tmp = document.getElementById('clickMenu');
        console.log(tmp.style.height);
        if (tmp.style.height == '0px') {
            tmp.style.height = '70px';
        }
        else if (tmp.style.height == '70px') {
            tmp.style.height = 0;
        }
    }
    
</script>
</html>
