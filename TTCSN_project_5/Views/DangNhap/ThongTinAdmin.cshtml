
@{
    ViewBag.Title = "ThongTinAdmin";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-size: 16px;
        width: 100%;
    }
    h2{
        margin: 10px 0;
    }
    input{
        padding: 7px 12px;
        margin-top: 5px;
    }
    .tableContainer{
        display:flex;
        justify-content:center;
    }
    .table{
        margin-top: 20px;
        width: 60%;
    }
    .row{
        display: flex;
    }
    .col-6{
        width: 50%;
    }
    .HienThiThongTin{
        padding: 7px 10px;
        background-color:lightgray;
    }
    h4{
        margin-bottom: 5px;
        margin-top: 5px;
        font-size: 17px;
    }
    p{
        margin: 10px 5px 10px 0;
    }
    .col-4{
        width: 33.33%;
    }
</style>
<h2 style="background-color:#1db5a4; padding: 5px 10px;">Thông tin người quản trị</h2>
<div class="tableContainer">
    <div class="table">
        <div class="row">
            <div class="col-6">
                <h4>Tên đăng nhập</h4>
                <p class="HienThiThongTin">@Model.TenDangNhap</p>
            </div>
            <div class="col-6">
                <h4>Mật khẩu</h4>
                <p class="HienThiThongTin">@Model.MatKhau </p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <h4>Họ tên</h4>
                <p class="HienThiThongTin">@Model.HoTen</p>
            </div>
            <div class="col-6">
                <h4>Ngày sinh</h4>
                <p class="HienThiThongTin">@String.Format("{0:dd/MM/yyyy}", @Model.NgaySinh) </p>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <h4>Quê quán</h4>
                <p class="HienThiThongTin">@Model.QueQuan</p>
            </div>
            <div class="col-4">
                <h4>Giới tính</h4>
                <p class="HienThiThongTin">@ViewBag.gt </p>
            </div>
            <div class="col-4">
                <h4>Số điện thoại</h4>
                <p class="HienThiThongTin">@Model.sdt </p>
            </div>
        </div>
    </div>
</div>



