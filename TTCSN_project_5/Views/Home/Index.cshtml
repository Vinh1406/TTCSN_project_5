    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
                const ctx = document.getElementById('myChart');
                var myArray = @Html.Raw(Json.Encode(ViewBag.Label));
                var dataPB = @Html.Raw(Json.Encode(ViewBag.data));
                new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: myArray,
                        datasets: [{
                            label: 'Số nhân viên',
                            data: dataPB,
                            borderWidth: 1,
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
    </script>
    <script>
                const bc = document.getElementById('barChart');
                var lbmPhong = @Html.Raw(Json.Encode(ViewBag.lbmPhong));
                var nvmPhong =  @Html.Raw(Json.Encode(ViewBag.nvmPhong));
                var date2 = new Date();
                var lbnvm = "Số lượng nhân viên mới trong tháng " + date2.getMonth().toString();
                new Chart(bc, {
                    type: 'bar',
                    data: {
                        labels: lbmPhong,
                        datasets: [{
                            label: 'Số lượng nhân viên mới trong tháng',
                            data: nvmPhong,
                            borderWidth: 1,
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
    </script>
    <script>
                const lc = document.getElementById('lineChart');
                var lbt = @Html.Raw(Json.Encode(ViewBag.LabelThang));
                var nghiValue = @Html.Raw(Json.Encode(ViewBag.nghiValue));
                var nvThemTrongThang = @Html.Raw(Json.Encode(ViewBag.nvThemTrongThang));
                var datee = new Date();
                var labelht = `Lượt nghỉ hàng tháng (` + datee.getFullYear().toString() + ')';
                var labelht2 = `Giao động nhân viên (` + datee.getFullYear().toString() + ')';
                new Chart(lc, {
                    type: 'line',
                    data: {
                        labels: lbt,
                        datasets: [{
                            label: labelht,
                            data: nghiValue,
                            fill: false,
                            borderColor: 'rgb(75, 192, 192)',
                            tension: 0.1
                        },
                        {
                            label: labelht2,
                            data: nvThemTrongThang,
                            fill: false,
                            borderColor: 'rgb(140, 100, 200)',
                            tension: 0.1
                        }],
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
    </script>
