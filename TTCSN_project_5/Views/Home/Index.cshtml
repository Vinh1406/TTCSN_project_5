@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
.Menu_content {
    margin: 0;
    padding: 0;
    display: block;
}
body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    font-size: 16px;
}


.header {
    box-shadow: 0px 0px 8px rgba(0,0,0,0.5);
    background-color: white;
}

    .title {
        text-align: center;
        background-color: lightblue;
        margin: 0;
        margin-bottom: 10px;
        padding: 10px 0;
        color: black;
    }
    .menu {
        padding: 30px;
        background-color: white;
    }
    .content {
    }
    .content_overral {
        position: absolute;
        z-index: 1;
        top: 100px;
        left: calc(20% + 10px);
        right: 0;
    }
    .content_header {
        display: flex;
        align-items: center;
        background-color: #ebebeb;
        padding: 0 16px;
        font-size: 15px;
    }
    .header_icon {
        margin-right: 8px;
    }
    .content_mennu {
        display: flex;
        align-items: center;
        margin-top: 16px;
    }
    .content_direct {
        border: 1px solid #d05c1c;
        border-radius: 10px;
        overflow: hidden;
        width: 23%;
        background-color: beige;
    }
    .direct_header {
        display: flex;
        justify-content: space-between;
        padding: 0 16px;
        align-items: center;
        background-color: #d05c1c;
        color: white;
    }
    .direct_icon i {
        font-size: 50px;
    }
    .direct_descript {
        text-align: right;
        font-size: 17px;
        font-weight: 600;
        line-height: 33px;
    }
    .direct_icon {
        padding: 16px;
        padding-left: 0;
    }
    .content_drect_link {
        text-decoration: none;
    }
    .direct_title {
        text-transform: uppercase;
    }
    .direct_number {
        font-size: 22px;
    }
    .direct_click {
        padding: 16px;
        justify-content: space-between;
        align-items: center;
        display: flex;
        color: #d05c1c;
    }
    *{
    margin: 0px;
    padding: 0px;
}
    


.context {
    width: 100%;
    position: absolute;
    top:50vh;

}

.context h1{
    text-align: center;
    color: #fff;
    font-size: 50px;
}


    .area {
        background: #3a7fbd;
        background: -webkit-linear-gradient(to left, #8f94fb, #4e54c8);
        width: 100%;
        height: calc(100% - 136px);
    }

    .circles {
        position: absolute;
/*        top: 0;
        left: calc(20% + 10px);
        right: 0;*/
        width: calc(80% - 20px);
        height: 600px;
        overflow: hidden;
        top: 100px;
        z-index: 0;
    }

        .circles li {
            position: absolute;
            display: block;
            list-style: none;
            width: 20px;
            height: 20px;
            background: rgb(134 175 212);
            animation: animate 25s linear infinite;
            bottom: -150px;
        }

.circles li:nth-child(1){
    left: 25%;
    width: 80px;
    height: 80px;
    animation-delay: 0s;
}


.circles li:nth-child(2){
    left: 10%;
    width: 20px;
    height: 20px;
    animation-delay: 2s;
    animation-duration: 12s;
}

.circles li:nth-child(3){
    left: 70%;
    width: 20px;
    height: 20px;
    animation-delay: 4s;
}

.circles li:nth-child(4){
    left: 40%;
    width: 60px;
    height: 60px;
    animation-delay: 0s;
    animation-duration: 18s;
}

.circles li:nth-child(5){
    left: 65%;
    width: 20px;
    height: 20px;
    animation-delay: 0s;
}

.circles li:nth-child(6){
    left: 75%;
    width: 110px;
    height: 110px;
    animation-delay: 3s;
}

.circles li:nth-child(7){
    left: 35%;
    width: 150px;
    height: 150px;
    animation-delay: 7s;
}

.circles li:nth-child(8){
    left: 50%;
    width: 25px;
    height: 25px;
    animation-delay: 15s;
    animation-duration: 45s;
}

.circles li:nth-child(9){
    left: 20%;
    width: 15px;
    height: 15px;
    animation-delay: 2s;
    animation-duration: 35s;
}

.circles li:nth-child(10){
    left: 85%;
    width: 150px;
    height: 150px;
    animation-delay: 0s;
    animation-duration: 11s;
}



@@keyframes animate {

    0%{
        transform: translateY(0) rotate(0deg);
        opacity: 1;
        border-radius: 0;
    }

    100%{
        transform: translateY(-1000px) rotate(720deg);
        opacity: 0;
        border-radius: 50%;
    }

}
