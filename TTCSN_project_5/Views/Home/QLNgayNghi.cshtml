<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/asset/css_one/fontawesome-free-6.4.2/css/all.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
</head>
<body>
    @{
        ViewBag.Title = "QLNgayNghi";
    }

    <style>
        th, td {
            padding: 14px;
        }

        .menuSort a {
            color: black;
            border: none;
        }

        .menuSearch {
            display: flex;
            justify-content: space-between;
            width: 70%;
        }

        .one {
            display: flex;
            justify-content: center;
            border: none;
            margin: 0;
            margin-left: 10px;
        }

        .table_but a {
            color: black;
        }

        th, td {
            padding: 10px 30px;
        }

        .button a {
            color: darkslateblue;
            display: block;
            padding: 10px;
        }

        .button {
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            width: 100%;
        }

        .title {
            text-align: center;
            margin-bottom: 40px;
        }

        button {
            margin: 10px;
        }

        .messeageSearchByName {
            display: none;
        }

        .button {
            background-color: white;
            font-size: 16px;
            font-weight: 800;
            position: relative;
            border: none;
            background-color: aliceblue;
            border-radius: 10px;
        }

            .button a {
                text-decoration: none;
            }

                .button a::after {
                    content: "";
                    height: 5px;
                    width: 0;
                    background-color: tomato;
                    text-align: center;
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    transition: all 0.15s ease-in-out;
                }

                .button a:hover::after {
                    width: 100%;
                }


        #searchpb {
            width: 275px;
            padding: 10px;
            color: gray;
            font-size: 12px;
            margin-right: 5px;
            border: none;
            outline: 1px solid blue;
        }

        option {
            font-size: 15px;
        }

            option:hover {
                background-color: lightblue;
                cursor: pointer;
            }

        #search:hover {
            cursor: pointer;
        }

        .menuSearch a {
            color: black;
            font-size: 16px;
            font-weight: 800;
            text-decoration: none;
            padding: 8px;
            border-radius: 10px;
        }

            .menuSearch a:hover {
                background-color: azure;
            }

        .search .one {
            text-align: center;
        }

        .one {
            align-items: center;
            padding: 10px;
        }

        .searchByName input {
            width: 200px;
            box-sizing: border-box;
            padding: 8px 10px;
        }

        .searchByName button {
            color: black;
            font-size: 14px;
            font-weight: 800;
            text-decoration: none;
            outline: none;
            border: none;
            border-radius: 5px;
            margin: 0;
            padding: 10px;
            background-color: lightblue;
        }


        .searchByPhongBan button:hover {
            cursor: pointer;
        }

        .searchByPhongBan input {
            font-size: 13px;
            background-color: white;
            border: none;
            outline: 1px solid blue;
            padding: 8px 10px;
        }



        th, td {
            padding: 5px;
            font-size: 14px;
            text-align: center;
        }

        table {
            width: 100%;
            margin-top: 0px !important;
        }

        td {
            border: 1px solid lightgray;
        }

        th {
            border: 1px solid black;
        }

        .table_but {
            font-size: 16px;
            border: none;
            padding: 0;
            background-color: white;
            border-radius: 15px;
            transition: 0.3s;
            margin: 0;
        }

            .table_but:hover {
                background-color: #d2faf8;
            }

            .table_but a {
                text-decoration: none;
                padding: 6px 10px;
                display: block;
            }

            .table_but i {
                font-size: 14px;
            }

        th, td {
            padding: 10px;
        }

        .table_but a {
            color: black;
        }

        th {
            background-color: lightgray;
        }

        #name {
            font-size: 13px;
            background-color: white;
            border: none;
            outline: 1px solid blue;
        }

        .clickByName:hover {
            cursor: pointer;
        }

        .menu__right {
            display: flex;
            align-items: center;
        }

        form {
            display: flex;
        }

        .menuSort {
            border: none;
        }

        .searchByPhongBan {
            display: flex;
            justify-content: center;
        }

        .menuSearch {
            align-items: center;
            justify-content: space-between
        }

        #name {
            font-size: 13px;
            background-color: white;
            border: none;
            outline: 1px solid blue;
            padding: 8px 10px;
            line-height: 10px;
        }

        .header {
            box-shadow: 0px 0px 8px rgba(0,0,0,0.5);
            margin-bottom: 16px;
            background-color: white;
        }

        .title {
            text-align: center;
            background-color: lightblue;
            margin: 0;
            margin-bottom: 10px;
            padding: 10px 0;
        }

        .table {
            max-height: calc(100% - 146px);
            overflow-y: auto;
            border-top: 1px solid lightgray;
            border-bottom: 1px solid lightgray;
        }

        .menu {
            display: flex;
            justify-content: space-between;
            padding: 0 16px;
        }
        .webkit {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            word-break: break-word;
            margin: 0;
        }
        .excelLink {
            padding: 5px;
            transition: 0.3s;
            border-radius: 5px;
            font-weight: 600;
        }

            .excelLink:hover {
                background-color: lightgreen;
                color: white !important;
                font-size: 18px;
            }
    </style>
    <div class="header">
        <h2 class="title">QUẢN LÝ NGÀY NGHỈ</h2>
        <div class="menu">
            <div class="menu__left">
                <button class="button"><a href="@Url.Action("QLNgayNghi", "Home")"><i class="fa-solid fa-rotate-right fa-flip-horizontal"></i></a></button>
                <a class="excelLink" href="@Url.Action("ExportToExcel", "Home", new { code = "NgayNghi" })" style="color: #21b61f; text-decoration:none;">Xuất file excel <i class="fa fa-file-excel" style="margin-left: 5px;"></i></a>
            </div>
            <div class="menuSearch">
                <div class="searchByPhongBan">
                    @using (Html.BeginForm("SearchNgayNghi", "NgayNghi"))
                    {
                        <input type="text" name="name" id="name" placeholder="Nhập tên nhân viên" size="40" />
                        <button class="one" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    }
                </div>
                <div class="menuSort">
                    <a href="@Url.Action("SortByTongSoNgayNghi","NgayNghi")" style="font-size: 15px; font-weight:500;"><i class="fa-solid fa-sort" style="margin-right: 5px; color:#831693"></i>Số ngày nghỉ</a>
                </div>
            </div>
        </div>
    </div>
    <div class="table">
        <table border="1" style="border-collapse:collapse;">
            <tr>
                <th style="width:110px;">Mã nhân viên</th>
                <th>Tên nhân viên</th>
                <th style="width:110px;">Tổng ngày nghỉ</th>
                <th>Ghi chú</th>
                <th>Tổng số bản ghi: @ViewBag.lg</th>
            </tr>

            @{
                for (int i = 0; i < ViewBag.lg; i++)
                {
                    <tr>
                        <td>@Model[i].MaNhanVien</td>
                        <td>@Model[i].HoTen</td>
                        <td>@Model[i].TongSoNgayNghi</td>
                        <td><p class="webkit">@Model[i].GhiChu</p></td>
                        <td><button class="table_but" accesskey=""> <a href="@Url.Action("InformationNgayNghi","NgayNghi",new {@id = @Model[i].MaNhanVien})"><i class="fa-solid fa-eye" style="color:blueviolet; margin-right: 10px;"></i>Thông tin chi tiết</a></button></td>
                    </tr>
                }
            }
            @{
                if (ViewBag.lg == 0)
                {
                    <tr>
                        <td colspan="11" style="text-align:center;">Không tồn tại bản ghi nào</td>
                    </tr>
                }
            }


        </table>
    </div>

</body>
</html>

