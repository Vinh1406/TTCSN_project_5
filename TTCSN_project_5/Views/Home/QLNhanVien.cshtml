<body>

    @{
        ViewBag.Title = "QLNhanVien";
    }

    <div class="header">
        <h2 class="title">QUẢN LÝ NHÂN VIÊN</h2>
        <div class="menu">
            <div class="menu__left">
                <button class="button"><a href="@Url.Action("AddNhanVien", "NhanVien")"><i class="fa-solid fa-plus" style="margin-right: 5px;"></i>Thêm nhân viên</a></button>
                <button class="button"><a href="@Url.Action("QLNhanVien", "Home")"><i class="fa-solid fa-rotate-right fa-flip-horizontal"></i></a></button>
                <a class ="excelLink" href="@Url.Action("ExportToExcel", "Home", new { code = "NhanVien" })" style="color: #21b61f; text-decoration:none;">Xuất file excel <i class="fa fa-file-excel" style="margin-left: 5px;"></i></a>
            </div>
            <div class="menu__right">
                <div class="menuSearch">
                    <select name="search" id="search">
                        <option class="one" value="">Lọc tìm kiếm</option>
                        <option value="name">Theo tên nhân viên</option>
                        <option value="cvu">Theo tên chức vụ</option>
                        <option value="pban">Theo phòng ban</option>
                    </select>
                    <a name="linkDH" id="linkDH">Lọc</a>
                </div>
                <div class="searchByName">
                    @using (@Html.BeginForm("SearchNhanVien", "NhanVien"))
                    {
                        <input type="text" name="name" id="name" placeholder="Nhập tên nhân viên" size="40" />
                        <button class="clickByName" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    }
                </div>
                <div class="searchByChucVu">
                    @{
                        List<string> listcv = new List<string>();
                        foreach (var item in ViewBag.listCV)
                        {
                            listcv.Add(item.TenChucVu);
                        }
                    }
                    @using (Html.BeginForm("SearchNhanVienByChucVu", "NhanVien"))
                    {

                        @Html.DropDownList("nvByCV", new SelectList(listcv, listcv.FirstOrDefault()), "--Chọn chức vụ--");
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    }
                </div>

                <div class="searchByPhongBan">
                    @using (@Html.BeginForm("SearchNhanVienByPhongBan", "NhanVien"))
                    {
                        <input type="text" name="nvByPB" id="nvByPB" placeholder="Nhập tên phòng ban" size="40" />
                        <button class="clickByPhongBan" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="Modal">
        <!-- model container -->
        <div class="modal-container">
            <div class="modal-close">
                <i class="fa-solid fa-xmark" style="font-size"></i>
            </div>
            <div class="modal-header">
                <i class="fa-solid fa-triangle-exclamation"></i>
                Thông báo!
            </div>
            <!-- model-content -->
            <div class="modal-content">
                <p class="modal-input">
                    Bạn chắc chắn muốn xóa nhân viên này?
                </p>
            </div>
            <!-- modal footer -->
            <footer class="modal-footer">
                <button id="buttonCo">Có</button>
                <button id="buttonKhong">Không</button>
            </footer>
        </div>
    </div>
    <div class="table">
        <table border="1" style="border-collapse:collapse;">
            <tr>
                <th>Mã nhân viên</th>
                <th>Tên tài khoản</th>
                <th>Mật khẩu</th>
                <th>Tên nhân viên</th>
                <th>Ngày sinh</th>
                <th>Quê Quán</th>
                <th>Giới tính</th>
                <th>Số điện thoại</th>
                <th>Phòng ban</th>
                <th>Chức vụ</th>
                <th>Tổng số nhân viên: @ViewBag.lg</th>
            </tr>
            @{
                for (int i = 0; i < ViewBag.lg; i++)
                {
                    <tr class="rowInformation">
                        <td style="display:none;">
                        </td>
                        <td class="Child_RowInformation">@Model[i].MaNhanVien</td>
                        <td>@Model[i].TaiKhoan</td>
                        <td>@Model[i].MatKhau</td>
                        <td>@Model[i].HoTen</td>
                        @{
                            string curentNgaySinh = String.Format("{0:dd/MM/yyyy}", @Model[i].NgaySinh);
                        }
                        <td>@curentNgaySinh</td>
                        <td><p class="webkit">@Model[i].QueQuan</p></td>
                        @{
                            var gt = "";
                            if (Model[i].GioiTinh == 1)
                            {
                                gt = "Nam";
                            }
                            else
                            {
                                gt = "Nữ";
                            }
                        }
                        <td>@gt</td>
                        <td>@Model[i].sdt</td>
                        @{
                            var ansPB = "";
                            foreach (var item in ViewBag.listPB)
                            {
                                if (Model[i].MaPhongBan == item.MaPhongBan)
                                {
                                    ansPB = item.TenPhongBan;
                                    break;
                                }
                            }
                        }
                        <td>@ansPB</td>
                        @{
                            var ansCV = "";
                            foreach (var item in ViewBag.listCV)
                            {
                                if (Model[i].MaChucVu == item.MaChucVu)
                                {
                                    ansCV = item.TenChucVu;
                                    break;
                                }
                            }
                        }
                        <td>@ansCV</td>
                        <td>
                            <div style="display: flex; justify-content: center;">
                                <button class="table_but">
                                    <a href="@Url.Action("UpdateNhanVien", "NhanVien", new { @id = @Model[i].MaNhanVien })"><i class="fa-solid fa-pen" style="color: blue;"></i></a>
                                </button>
                                <button id="buttonRemove" class="table_but"><i class="fa-solid fa-trash" style="color: red; padding: 8px 10px; display: block;"></i></button>
                                @*<a href="@Url.Action("RemoveNhanVien", "NhanVien", new { @id = @Model[i].MaNhanVien })"></a>*@

                            </div>

                        </td>
                    </tr>
                }
            }
            @{
                if (ViewBag.lg == 0)
                {
                    <tr>
                        <td colspan="11" style="text-align:center; padding: 10px 0!important;">Không tồn tại bản ghi nào</td>
                    </tr>
                }
            }
        </table>
    </div>
</body>
