
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/asset/css_one/fontawesome-free-6.4.2/css/all.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" />
</head>
<body>
    @{
        ViewBag.Title = "QLPhongBan";
    }

    <style>
        .one {
            display: flex;
            justify-content: center;
            border: none;
        }

        .table_but a {
            color: black;
        }

        th, td {
            padding: 10px 30px;
        }

        .menuSearch {
            float: right;
        }

        .button a {
            color: darkslateblue;
            display: block;
            padding: 10px;
        }

        .button {
            padding: 0;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
            width: 100%;
        }

        .title {
            text-align: center;
            margin-bottom: 10px;
        }

        button {
            margin: 10px;
        }

        .messeageSearchByName {
            display: none;
        }

        .button {
            background-color: white;
            font-size: 16px;
            font-weight: 800;
            position: relative;
            border: none;
            background-color: aliceblue;
            border-radius: 10px;
        }

            .button a {
                text-decoration: none;
            }

                .button a::after {
                    content: "";
                    height: 5px;
                    width: 0;
                    background-color: tomato;
                    text-align: center;
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    transition: all 0.15s ease-in-out;
                }

                .button a:hover::after {
                    width: 100%;
                }



        .menuSearch {
            width: auto;
            height: 60px;
            line-height: 60px;
            color: black;
            font-size: 16px;
            font-weight: 800;
            float: right;
            box-sizing: border-box;
        }

        #searchpb {
            width: 275px;
            padding: 10px;
            color: gray;
            font-size: 12px;
            margin-right: 5px;
            border: none;
            outline: 1px solid blue;
        }

        option {
            font-size: 15px;
        }

            option:hover {
                background-color: lightblue;
                cursor: pointer;
            }

        #search:hover {
            cursor: pointer;
        }

        .menuSearch a {
            color: black;
            font-size: 16px;
            font-weight: 800;
            text-decoration: none;
            border: 1px solid black;
            padding: 8px;
        }

            .menuSearch a:hover {
                background-color: azure;
            }

        .search .one {
            text-align: center;
        }



        .searchByName input {
            width: 200px;
            box-sizing: border-box;
            padding: 8px 10px;
        }

        .searchByName button {
            color: black;
            font-size: 14px;
            font-weight: 800;
            text-decoration: none;
            outline: none;
            border: none;
            border-radius: 5px;
            margin: 0;
            padding: 10px 15px;
            background-color: lightblue;
        }

            .searchByName button:hover {
                cursor: pointer;
            }


        .searchByPhongBan button:hover {
            cursor: pointer;
        }

        .searchByPhongBan input {
            font-size: 13px;
            background-color: white;
            border: none;
            outline: 1px solid blue;
            padding: 8px 10px;
        }



        th, td {
            padding: 5px;
            font-size: 14px;
            text-align: center;
        }

        table {
            width: 100%;
            margin-top: 0px !important;
        }

        td {
            border: 1px solid lightgray;
        }

        th {
            border: 1px solid black;
        }

        .table_but {
            font-size: 16px;
            border: none;
            padding: 0;
            background-color: white;
            border-radius: 15px;
            transition: 0.3s;
            margin: 0 5px;
        }

            .table_but:hover {
                background-color: #d2faf8;
            }

            .table_but a {
                text-decoration: none;
                padding: 6px 10px;
                display: block;
            }

            .table_but i {
                font-size: 14px;
            }

        th, td {
            padding: 10px;
        }

        .table_but a {
            color: black;
        }

        th {
            background-color: lightgray;
        }

        #name {
            font-size: 13px;
            background-color: white;
            border: none;
            outline: 1px solid blue;
        }

        .clickByName:hover {
            cursor: pointer;
        }

        .menu__right {
            display: flex;
            align-items: center;
        }

        form {
            display: flex;
        }

        .header {
            box-shadow: 0px 0px 8px rgba(0,0,0,0.5);
            margin-bottom: 16px;
            background-color: white;
        }

        .title {
            text-align: center;
            background-color: lightblue;
            margin: 0;
            margin-bottom: 10px;
            padding: 10px 0;
        }

        .table {
            max-height: calc(100% - 146px);
            overflow-y: auto;
            border-top: 1px solid lightgray;
            border-bottom: 1px solid lightgray;
        }

        .menu {
            display: flex;
            justify-content: space-between;
            padding: 0 16px;
        }
        /*model*/
        .Modal.open {
            display: flex !important;
        }

        .Modal {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0,0,0,0.4);
            display: flex;
            align-items: center;
            justify-content: center;
            display: none;
            z-index: 2;
        }

        .modal-container {
            background-color: #fff;
            width: 420px;
            max-width: calc(100% - 32px);
            position: relative;
            animation: modalFaceIn ease 0.5s;
            border-radius: 10px;
            top: -15%;
        }

        .modal-header {
            background-color: #2d829d;
            height: 130px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 32px;
            color: #fff;
            letter-spacing: 5px;
            font-weight: 400;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        .modal-close {
            position: absolute;
            color: #fff;
            right: 0;
            top: 0;
            padding: 12px 10px;
            border-top-right-radius: 10px;
        }

            .modal-close:hover {
                opacity: 0.7;
                cursor: pointer;
            }

        .modal-content {
            padding: 16px 16px 0 26px;
            height: 60px;
        }

        .modal-input {
            margin: 0;
            font-size: 19px;
            font-weight: bold;
            font-family: segoe ui;
        }

        input.modal-input {
            margin-bottom: 23px;
            display: block;
            width: 100%;
            border: 1px solid #ccc;
            padding: 11px;
        }

        #buttonCo,
        #buttonKhong {
            width: 100%;
            font-size: 15px;
            padding: 17px 0;
            color: #fff;
            background-color: #2d829d;
            border: none;
            cursor: pointer;
            font-weight: 500;
            opacity: 1;
            border-radius: 10px;
        }

            #buttonCo:hover,
            #buttonKhong:hover {
                opacity: 0.8;
            }

        .modal-footer {
            font-size: 15px;
            padding: 16px;
            text-align: right;
            display: flex;
            justify-content: space-evenly;
        }

            .modal-footer a {
                color: #2196F3;
            }

        @@keyframes modalFaceIn {
            from {
                transform: translateY(-130px);
                opacity: 0;
            }

            to {
                transform: translateY(0);
                opacity: 1;
            }
        }
        .webkit {
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
            word-break: break-word;
            margin: 0;
        }
        .excelLink {
            padding: 5px;
            transition: 0.3s;
            border-radius: 5px;
            font-weight: 600;
        }

            .excelLink:hover {
                background-color: lightgreen;
                color: white !important;
                font-size: 18px;
            }
    </style>


    <div class="header">
        <h2 class="title">QUẢN LÝ PHÒNG BAN</h2>
        <div class="menu">
            <div class="menu__left">
                <button class="button"><a href="@Url.Action("AddPhongBan","PhongBan")"><i class="fa-solid fa-plus" style="margin-right: 5px;"></i>Thêm Phòng Ban</a></button>
                <button class="button"><a href="@Url.Action("QLPhongBan", "Home")"><i class="fa-solid fa-rotate-right fa-flip-horizontal"></i></a></button>
                <a class="excelLink" href="@Url.Action("ExportToExcel", "Home", new { code = "PhongBan" })" style="color: #21b61f; text-decoration:none;">Xuất file excel <i class="fa fa-file-excel" style="margin-left: 5px;"></i></a>
            </div>
            <div class="menu__right">
                <div class="searchByName">
                    @using (@Html.BeginForm("SearchPhongBan", "PhongBan"))
                    {
                        <input type="text" name="searchpb" id="searchpb" placeholder="Nhập tên phòng ban" size="40" />
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="Modal">
        <!-- model container -->
        <div class="modal-container">
            <div class="modal-close">
                <i class="fa-solid fa-xmark" style="font-size"></i>
            </div>
            <div class="modal-header">
                <i class="fa-solid fa-triangle-exclamation"></i>
                Thông báo!
            </div>
            <!-- model-content -->
            <div class="modal-content">
                <p class="modal-input">
                    Bạn chắc chắn muốn xóa phòng ban này?
                </p>
            </div>
            <!-- modal footer -->
            <footer class="modal-footer">
                <button id="buttonCo">Có</button>
                <button id="buttonKhong">Không</button>
            </footer>
        </div>
    </div>

    <div class="table">
        <table border="1" style="border-collapse:collapse;">
            <tr>
                <th style="width: 120px;">Mã phòng ban</th>
                <th>Tên phòng ban</th>
                <th>Địa chỉ</th>
                <th>Số điện thoại</th>
                <th>Tổng số bản ghi: @ViewBag.lg</th>
            </tr>
            @{
                for (int i = 0; i < ViewBag.lg; i++)
                {
                    <tr class="rowInformation">
                        <td class="Child_RowInformation">@Model[i].MaPhongBan</td>
                        <td>@Model[i].TenPhongBan</td>
                        <td><p class="webkit">@Model[i].DiaChi</p></td>
                        <td>@Model[i].sdtLienHe</td>
                        <td style="width:180px;">
                            <div class="one">
                                <button class="table_but"><a href="@Url.Action("ListNhanVienOfPhongBan","PhongBan", new { @id = @Model[i].MaPhongBan })"><i class="fa-solid fa-list"></i></a></button>
                                <div>
                                    <button class="table_but">
                                        <a href="@Url.Action("UpdatePhongBan","Phongban",new { @id = @Model[i].MaPhongBan })"><i class="fa-solid fa-pen" style="color: blue;"></i></a>
                                    </button>
                                    <button class="table_but" id="buttonRemovePhongBan" style="cursor: pointer;">
                                     <i class="fa-solid fa-trash" style="color: red; padding: 8px 10px; display: block; "></i>
                                    </button>
                                    @*<button id="buttonRemove" class="table_but"><i class="fa-solid fa-trash" style="color: red; padding: 6px 10px; display: block;"></i></button>*@
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            @{
                if (ViewBag.lg == 0)
                {
                    <tr>
                        <td colspan="11" style="text-align:center;">Không tồn tại bản ghi nào</td>
                    </tr>
                }
            }
        </table>
    </div>

</body>
</html>
<script>
    const buttonRemoveElement = document.querySelectorAll("#buttonRemovePhongBan");
    const modalElement = document.querySelector('.Modal');

    const modalClose = document.querySelector('.modal-close');

    const modalContainer = document.querySelector('.modal-container');

    const buttonCoElement = document.getElementById("buttonCo");

    const buttonKhongElement = document.getElementById("buttonKhong");

    function showDialog() {
        modalElement.classList.add('open');
    }

    function hiddenDialog() {
        modalElement.classList.remove('open');
    }
    function checkCoKhong(item) {
        var parentElement = item.closest(".rowInformation");
        buttonCoElement.addEventListener("click", function coClick(event) {
            event.stopPropagation();
            hiddenDialog();
            window.location = `/Phongban/RemovePhongBan/${parentElement.querySelector(".Child_RowInformation").textContent}`;
        });
        buttonKhongElement.addEventListener("click", function khongClick(event) {
            event.stopPropagation();
            hiddenDialog();
            console.log(parentElement.querySelector(".Child_RowInformation").textContent);
        });
    }
    for (let item of buttonRemoveElement) {
        item.addEventListener("click", (event) => {
            event.stopPropagation();
            showDialog();
            checkCoKhong(item);
        });
    }
    modalClose.addEventListener('click', hiddenDialog);
    modalElement.addEventListener('click', hiddenDialog)
    modalContainer.addEventListener('click', function (event) {
        event.stopPropagation();
    });
</script>
