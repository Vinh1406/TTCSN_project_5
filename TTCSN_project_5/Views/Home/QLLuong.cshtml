<body>

    @{
        ViewBag.Title = "QLLuong";
    }

    <style>
        th, td {
            padding: 10px;
        }
        .SearchAndSort,
        .SortByThucLinh {
            display: flex;
            justify-content: space-between;
        }

        .decrease {
            display: none;
        }

        .table_but a{
            display: flex;
            align-items: center;
        }

        #sort {
            margin: 0 10px;
        }
        .button {
            padding: 0px;
            border: none;
            color: darkslateblue;
            background-color: aliceblue;
            font-weight: 800;
            border-radius: 10px;
        }
        button:hover{
            cursor: pointer;
        }
        body {
            padding: 0px;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 16px;
        }

        .titel {
            text-align: center;
            margin-bottom: 10px;
        }

            .button a {
                text-decoration: none;
                padding: 10px;
                color: darkslateblue;
                position: relative;
            }

                .button a::after {
                    content: "";
                    height: 5px;
                    width: 0;
                    background-color: tomato;
                    text-align: center;
                    position: absolute;
                    bottom: 0;
                    left: 0;
                    transition: all 0.15s ease-in-out;
                }

                .button a:hover::after {
                    width: 100%;
                }

        .SearchAndSort input {
            font-size: 13px;
            background-color: white;
            border: none;
            outline: 1px solid blue;
            padding: 9px 10px;
            margin-right: 5px;
        }

        .SearchAndSort button {
            font-size: 16px;
            font-weight: 800;
            padding: 8px 10px;
            background-color: lightblue;
            border: none;   
            border-radius: 5px;
        }

        .menuSearch {
            width: auto;
            color: black;
            font-size: 16px;
            font-weight: 800;
            float: right;
            box-sizing: border-box;
        }

        #sort {
            width: 200px;
            height: 32px;
            background-color: cornsilk;
            color: black;
            font-size: 16px;
            font-weight: 800;
            margin-right: 20px;
            line-height: 40px;
            position: absolute;
            top: 13px;
            right: 49px;
        }

        .menuSort {
            padding-bottom: 5px;
            position: relative;
        }

            .menuSort a {
                color: black;
                font-size: 16px;
                font-weight: 800;
                text-decoration: none;
                border: 1px solid black;
                padding: 5px;
                position: absolute;
                top: 13px;
                right: -9px;
            }

                .menuSort a:hover {
                    background-color: azure;
                }

        .search .one {
            text-align: center;
        }

        table {
            width: 100%;
            height: calc(100% - 146px);
            overflow-y: scroll;
        }
        th {
            background-color: lightgray;
            border-width: 1px;
        }
        td {
            border-color: lightgray !important;
            font-size: 14px;
            text-align: center;
        }
        th {
            padding: 10px;
            border: 1px solid black;
            font-size: 14px;
            text-align: center;
        }

        .table_but {
            font-size: 16px;
            border: none;
            padding: 0;
            background-color: white;
            border-radius: 15px;
            transition: 0.3s;
            margin: 0 5px;
        }

            .table_but:hover {
                background-color: #d2faf8;
            }

            .table_but a {
                text-decoration: none;
                padding: 10px;
            }

            .table_but i {
                font-size: 14px;
            }
        .searchByName form{
            display: flex;
            align-items: center;
        }
        .header {
            box-shadow: 0px 0px 8px rgba(0,0,0,0.5);
            margin-bottom: 16px;
            background-color: white;
        }
        .title {
            text-align: center;
            background-color: lightblue;
            margin: 0;
            margin-bottom: 10px;
            padding: 10px 0;
        }
        .table {
            max-height: calc(100% - 146px);
            overflow-y: auto;
            border-top: 1px solid lightgray;
            border-bottom: 1px solid lightgray;
        }
        .excelLink {
            padding: 5px;
            transition: 0.3s;
            border-radius: 5px;
            font-weight: 600;
            margin-left: 10px;
            display:flex;
            align-items: center;
        }

            .excelLink:hover {
                background-color: lightgreen;
                color: white !important;
                font-size: 18px;
            }
    </style>
    @{
        double thucLinh = 0;
        int lcb = 0;
        double hsl = 0;
        int tt = 0;
        int tp = 0;
        int pc = 0;
        double thue = 0;
    }

    
<div class="header">
    <h2 class="title">QUẢN LÝ LƯƠNG</h2>
    <div style="display: flex; justify-content: space-between; padding: 13px;">
        <div style="display:flex;">
            <button class="button"><a href="@Url.Action("QLLuong", "Home")"><i class="fa-solid fa-rotate-right fa-flip-horizontal"></i></a></button>
            <a class="excelLink" href="@Url.Action("ExportToExcel", "Home", new { code = "Luong" })" style="color: #21b61f; text-decoration:none;">Xuất file excel <i class="fa fa-file-excel" style="margin-left: 5px;"></i></a>
        </div>
        
        <div class="SearchAndSort">
            <div class="menuSearch">
                <div class="searchByName">
                    @using (@Html.BeginForm("SearchNhanVien", "Luong"))
                    {
                        <input type="text" name="name" id="name" placeholder="Nhập tên nhân viên" size="40" />
                        <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
